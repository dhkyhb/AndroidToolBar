<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_slide_title"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bgdr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#77A39E9D"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bgdr" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Username"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="i am con2ee"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <com.example.administrator.androidtoolbar.View.PicAndTextBtn
            android:id="@+id/PAT_dressup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:pic="@drawable/dress"
            app:text="Dress Up"
            app:textColor="#000000"
            app:textSize="8sp"></com.example.administrator.androidtoolbar.View.PicAndTextBtn>

        <com.example.administrator.androidtoolbar.View.PicAndTextBtn
            android:id="@+id/PAT_profile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/PAT_dressup"
            app:pic="@drawable/profile"
            app:text="Profile"
            app:textColor="#000000"
            app:textSize="8sp"></com.example.administrator.androidtoolbar.View.PicAndTextBtn>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true">

            <com.example.administrator.androidtoolbar.View.PicAndTextBtn
                android:id="@+id/PAT_settting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:pic="@drawable/setting"
                app:text="setting"
                app:textColor="#000000"
                app:textSize="8sp"></com.example.administrator.androidtoolbar.View.PicAndTextBtn>

            <com.example.administrator.androidtoolbar.View.PicAndTextBtn
                android:id="@+id/PAT_night"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:pic="@drawable/night"
                app:text="night"
                app:textColor="#000000"
                app:textSize="8sp"></com.example.administrator.androidtoolbar.View.PicAndTextBtn>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>